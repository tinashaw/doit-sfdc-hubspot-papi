---
{
	"email" : vars.email
}]]]></http:query-params>

		</http:request>
				<ee:transform doc:name="Transform Message" doc:id="22126a27-20f1-468c-9071-eba8a1509ade">
			<ee:message>
				<ee:set-payload><![CDATA[%dw 2.0
output application/json
---
payload.ownerId[0]]]></ee:set-payload>
			</ee:message>
		</ee:transform>
			</when>
			<otherwise >
				<logger level="INFO" doc:name="Logger" doc:id="26a6e3b8-fcdb-4975-90c2-630fdc0479b6" message="No FederationIdentifier found"/>
