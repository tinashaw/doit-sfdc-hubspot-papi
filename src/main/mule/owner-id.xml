			<ee:message >
				<ee:set-payload ><![CDATA[%dw 2.0
output application/json
---
payload.Id[0]]]></ee:set-payload>
			</ee:message>
		</ee:transform>
	</flow>
	<flow name="fetch-ownerId-for-salesforce-to-hubspotFlowFlow" doc:id="2a3ddd07-14c8-4673-b844-c27e18a0f486" >
		<http:request method="GET" doc:name="Request" doc:id="bfc8a150-d226-44db-bb0f-bb624f5daee1" config-ref="HTTP_Request_configuration_salesforce_sapi" path="/user/id" target="ownerId" responseTimeout="60000">
			<http:query-params ><![CDATA[#[output application/java
---
{
	"ownerId" : vars.ownerId
}]]]></http:query-params>
		</http:request>
		<choice doc:name="Choice" doc:id="43cc00c8-4ca6-4662-9fd5-820d2eb36506" >
			<when expression="#[!isEmpty(vars.ownerId.FederationIdentifier[0])]">
				<ee:transform doc:name="Transform Message" doc:id="5afd6533-d82f-46a3-a215-5ffc7b20a64b">
			<ee:message>
			</ee:message>
			<ee:variables>
				<ee:set-variable variableName="email"><![CDATA[%dw 2.0
output application/json
---
(vars.ownerId.FederationIdentifier[0]) as String]]></ee:set-variable>
			</ee:variables>
		</ee:transform>
				<http:request method="GET" doc:name="Get hubspot owner by email" doc:id="45f7573b-0434-4561-a5e1-a40014af50dd" config-ref="HTTP_Request_configuration_hubspot_sapi" path="/owner/email" responseTimeout="#[p('hubspot-sapi.responseTimeout')]">
