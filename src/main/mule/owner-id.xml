					<ee:message >
						<ee:set-payload ><![CDATA[%dw 2.0
output application/json
---
vars.ownerId.FederationIdentifier[0]]]></ee:set-payload>
					</ee:message>
				</ee:transform>
			
</otherwise>
		</choice>
	</flow>
