				<ee:set-variable variableName="email" ><![CDATA[%dw 2.0
output application/json
---
(vars.ownerId.email) as String]]></ee:set-variable>
			</ee:variables>
		</ee:transform>
		<http:request method="GET" doc:name="Request" doc:id="354ed8fa-ca2a-4571-8898-ba398281707a" config-ref="HTTP_Request_configuration_salesforce_sapi" path="/user/email" responseTimeout="60000" >
